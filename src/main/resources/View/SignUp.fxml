         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
               <!-- Left side with the image -->
               <VBox alignment="CENTER" prefHeight="479.0" prefWidth="271.0" VBox.vgrow="ALWAYS">
                  <children>
                     <ImageView fx:id="image1" fitHeight="236.0" fitWidth="267.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../Images/train.png" />
                        </image>
                     </ImageView>
                     <Text fx:id="TrainMate" fill="#090973" strokeType="OUTSIDE" strokeWidth="0.0" text="TrainMate" wrappingWidth="180.29138296842575">
                        <font>
                           <Font name="System Bold Italic" size="36.0" />
                        </font>
                     </Text>
                  </children>
               </VBox>
               <!-- Right side with the login form -->
               <VBox alignment="CENTER" maxWidth="Infinity" prefHeight="479.0" prefWidth="429.0" spacing="10.0" VBox.vgrow="ALWAYS">
                  <Text fx:id="signup" fill="#090973" strokeType="OUTSIDE" strokeWidth="0.0" text="User Registration" textAlignment="CENTER" wrappingWidth="213.33666610717773">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Text>
                  <VBox maxWidth="400.0" prefHeight="250.0" prefWidth="400.0" spacing="10.0">
                     <Label fx:id="username" text="Admin Id">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font></Label>
                     <TextField fx:id="idTxt" focusTraversable="false" prefHeight="30.0" prefWidth="300.0" promptText="Admin Id">
                        <font>
                           <Font size="14.0" />
                        </font></TextField>
                     <Label fx:id="username1" text="Username">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <TextField fx:id="usernameTxt" focusTraversable="false" prefHeight="30.0" prefWidth="300.0" promptText="Username">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </TextField>
                     <Label fx:id="email" text="Email">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font></Label>
                     <TextField fx:id="emailTxt" focusTraversable="false" prefHeight="30.0" prefWidth="300.0" promptText="email">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </TextField>
                     <Label fx:id="password" text="Password">
                        <font>
                           <Font name="System Bold" size="12.0" />
                        </font>
                     </Label>
                     <PasswordField fx:id="pwrdTxt" focusTraversable="false" prefHeight="30.0" prefWidth="300.0" promptText="********">
                        <font>
                           <Font size="14.0" />
                        </font>
                     </PasswordField>
                  </VBox>
                  <HBox alignment="CENTER_RIGHT" maxWidth="400.0" prefWidth="400.0" spacing="10.0" />
